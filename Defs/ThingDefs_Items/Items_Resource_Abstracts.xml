<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!--================== Bases ==================-->
  
  <ThingDef Name="ResourceBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>75</stackLimit>
		<statBases>
			<Beauty>-4</Beauty>
		</statBases>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<alwaysHaulable>true</alwaysHaulable>
		<drawGUIOverlay>true</drawGUIOverlay>
		<rotatable>false</rotatable>
		<pathCost>15</pathCost>
	</ThingDef>

  <ThingDef Abstract="True" Name="OrganicProductBase" ParentName="ResourceBase">
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>6</DeteriorationRate>
			<Mass>0.03</Mass>
    </statBases>
    <tickerType>Rare</tickerType>
  </ThingDef>
  
  <!-- Eggs --> 
  
 <ThingDef Abstract="True" Name="EggBase" ParentName="OrganicProductBase" >
    <graphicData>
      <texPath>Things/Item/Resource/AnimalProductRaw/EggBirdSmall</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <ingestible>
      <foodType>AnimalProduct</foodType>
      <nutrition>0.25</nutrition>
      <ingestEffect>EatMeat</ingestEffect>
      <ingestSound>RawMeat_Eat</ingestSound>
      <tasteThought>AteRawFood</tasteThought>
    </ingestible>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <Mass>0.15</Mass>
			<MaxHitPoints>20</MaxHitPoints>
			<DeteriorationRate>2</DeteriorationRate>
    </statBases>
  </ThingDef>

  <ThingDef Abstract="True" Name="EggUnfertBase" ParentName="EggBase" >
    <ingestible>
      <preferability>RawBad</preferability>
    </ingestible>
    <thingCategories>
      <li>EggsUnfertilized</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>15</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
			<li Class="CompProperties_FoodPoisoningChance">
				<humanlikeOnly>true</humanlikeOnly>
			</li>
    </comps>
  </ThingDef>

  <ThingDef Abstract="True" Name="EggFertBase" ParentName="EggBase" >
    <tickerType>Normal</tickerType>
    <ingestible>
      <preferability>DesperateOnly</preferability>
    </ingestible>
    <thingCategories>
      <li>EggsFertilized</li>
    </thingCategories>
		<comps>
			<li Class="CompProperties_FoodPoisoningChance">
				<humanlikeOnly>true</humanlikeOnly>
			</li>
			<li Class="CompProperties_TemperatureRuinable">
				<minSafeTemperature>0</minSafeTemperature>
				<maxSafeTemperature>50</maxSafeTemperature>
				<progressPerDegreePerTick>0.00003</progressPerDegreePerTick>
			</li>
		</comps>
  </ThingDef>
 
  <!-- Wool --> 
 
  <ThingDef ParentName="ResourceBase" Name="WoolBase" Abstract="True">
    <graphicData>
      <texPath>Things/Item/Resource/Wool</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <MarketValue>3.0</MarketValue>
      <Mass>0.028</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>3.4</DeteriorationRate>
    </statBases>
    <stackLimit>100</stackLimit>
    <stuffProps>
      <categories>
        <li>Fabric</li>
      </categories>
      <commonality>0.15</commonality>
      <statFactors>
        <ArmorRating_Blunt>1.2</ArmorRating_Blunt>
      </statFactors>
    </stuffProps>
    <thingCategories>
      <li>Textiles</li>
    </thingCategories>
  </ThingDef>

</Defs>

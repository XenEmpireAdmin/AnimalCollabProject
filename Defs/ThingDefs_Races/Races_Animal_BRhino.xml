<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
  <ThingDef ParentName="AnimalThingBase">
    <defName>ACPBlackRhinoceros</defName>
    <label>black rhinoceros</label>
    <description>This large land mammal is typically quite peaceful, but it will not hesitate to charge with its horn to fend off trespassers.</description>
    <statBases>
      <MoveSpeed>5.8</MoveSpeed>
      <ComfyTemperatureMin>-8</ComfyTemperatureMin>
      <MarketValue>2000</MarketValue>
    </statBases>
     <tools>
      <li>
        <label>horn</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>19</power>
        <cooldownTime>1.9</cooldownTime>
        <linkedBodyPartsGroup>HornAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <label>horn</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>19</power>
        <cooldownTime>1.9</cooldownTime>
        <linkedBodyPartsGroup>HornAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>19</power>
        <cooldownTime>2.4</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15</power>
        <cooldownTime>1.9</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>QuadrupedAnimalWithHoovesAndHorn</body>
      <baseHungerRate>1.5</baseHungerRate>
      <baseBodySize>3.0</baseBodySize>
      <baseHealthScale>5.5</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Rhinoceros</leatherDef>
      <useMeatFrom>Rhinoceros</useMeatFrom>
	  <trainability>Advanced</trainability>
      <wildness>0.90</wildness>
      <manhunterOnTameFailChance>0.025</manhunterOnTameFailChance>
      <manhunterOnDamageChance>1</manhunterOnDamageChance>
      <gestationPeriodDays>45</gestationPeriodDays>
      <nameOnTameChance>1</nameOnTameChance>
      <lifeExpectancy>65</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.4</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>1.4</minAge>
          <soundWounded>Pawn_Rhinoceros_Wounded</soundWounded>
          <soundDeath>Pawn_Rhinoceros_Death</soundDeath>
          <soundCall>Pawn_Rhinoceros_Call</soundCall>
          <soundAngry>Pawn_Rhinoceros_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
	  <wildBiomes>
		<TropicalRainforest>0.065</TropicalRainforest>
		<TemperateForest>0.01</TemperateForest>
		<AridShrubland>0.025</AridShrubland>
		<Desert>0.02</Desert>
		<ExtremeDesert>0.01</ExtremeDesert>
      </wildBiomes>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
      <li>AnimalFighter</li>
    </tradeTags>
  </ThingDef>
 

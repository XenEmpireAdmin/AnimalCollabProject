<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BigBirdThingBase">
    <defName>ACPDuck</defName>
    <label>duck</label>
    <description>A smallish bird found across the world near bodies of water. Ducks are exellent flyers and swimmers and very popular for their meat.</description>
    <statBases>
      <MoveSpeed>3.5</MoveSpeed>
      <ComfyTemperatureMin>-20</ComfyTemperatureMin>
      <MarketValue>150</MarketValue>
    </statBases>
    <race>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>0.3</baseBodySize>
      <baseHungerRate>0.3</baseHungerRate>
      <baseHealthScale>0.6</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <useMeatFrom>Cassowary</useMeatFrom>
      <useLeatherFrom>ACPDomesticGoose</useLeatherFrom>
      <wildness>0.35</wildness>
      <wildBiomes>
		    <AridShrubland>0.02</AridShrubland>
		    <TropicalRainforest>0.08</TropicalRainforest>
		    <TemperateForest>0.26</TemperateForest>
		    <BorealForest>0.22</BorealForest>
      </wildBiomes>
      <lifeExpectancy>6</lifeExpectancy>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>ACPEggDuckFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>4</eggLayIntervalDays>
	<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTime>1.65</defaultCooldownTime>
        <meleeDamageBaseAmount>3</meleeDamageBaseAmount>
        <meleeDamageDef>Scratch</meleeDamageDef>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTime>1.85</defaultCooldownTime>
        <meleeDamageBaseAmount>4</meleeDamageBaseAmount>
        <meleeDamageDef>Bite</meleeDamageDef>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </verbs>
  </ThingDef>
  

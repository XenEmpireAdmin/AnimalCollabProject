<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BigBirdThingBase">
    <defName>ACPGreatBustard</defName>
    <label>great bustard</label>
    <description>A fairly large bird with an unusual degree of gender dimorphism. Great bustards are known for flying and running surprisingly fast for their size.</description>
    <statBases>
      <MoveSpeed>5.5</MoveSpeed>
      <ComfyTemperatureMin>-40</ComfyTemperatureMin>
      <MarketValue>180</MarketValue>
    </statBases>
    <race>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>0.4</baseBodySize>
      <baseHungerRate>0.3</baseHungerRate>
      <baseHealthScale>0.65</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <wildness>0.45</wildness>
	  <useMeatFrom>Cassowary</useMeatFrom>
	  <useLeatherFrom>ACPDomesticGoose</useLeatherFrom>
	  <wildBiomes>
		<AridShrubland>0.02</AridShrubland>
		<TropicalRainforest>0.05</TropicalRainforest>
		<TemperateForest>0.15</TemperateForest>
		<BorealForest>0.1</BorealForest>
		<Tundra>0.05</Tundra>
      </wildBiomes>
      <lifeExpectancy>10</lifeExpectancy>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
		<eggFertilizedDef>ACPEggBustardFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>12</eggLayIntervalDays>
		<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTime>1.65</defaultCooldownTime>
        <meleeDamageBaseAmount>4</meleeDamageBaseAmount>
        <meleeDamageDef>Scratch</meleeDamageDef>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTime>1.85</defaultCooldownTime>
        <meleeDamageBaseAmount>6</meleeDamageBaseAmount>
        <meleeDamageDef>Bite</meleeDamageDef>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </verbs>
  </ThingDef>


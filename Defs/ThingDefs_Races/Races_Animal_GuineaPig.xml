<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <thingClass>AnimalVariations.AnimalMultiSkins</thingClass>
    <defName>ACPGuineaPig</defName>
    <label>guinea pig</label>
    <description>A rodent frequently bred for meat, but also an affectionate pet of many shapes and sizes.</description>
    <statBases>
      <MoveSpeed>2.5</MoveSpeed>
      <ComfyTemperatureMin>-25</ComfyTemperatureMin>
      <MarketValue>60</MarketValue>
    </statBases>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>1</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>2</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>1</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>2</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>2</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>4</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>QuadrupedAnimalWithPaws</body>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>0.2</baseBodySize>
      <baseHungerRate>0.20</baseHungerRate>
      <baseHealthScale>0.4</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Light</leatherDef>
	  <useMeatFrom>Squirrel</useMeatFrom>
      <nameOnTameChance>1</nameOnTameChance>
      <wildness>0.15</wildness>
      <wildBiomes>
        <ExtremeDesert>0.005</ExtremeDesert>
        <Desert>0.01</Desert>
        <AridShrubland>0.015</AridShrubland>
        <TropicalRainforest>0.25</TropicalRainforest>
        <TemperateForest>0.30</TemperateForest>
        <BorealForest>0.20</BorealForest>
        <Tundra>0.01</Tundra>
		<TropicalSwamp>0.1</TropicalSwamp>
		<TemperateSwamp>0.15</TemperateSwamp>
		<ColdBog>0.1</ColdBog>
      </wildBiomes>
      <mateMtbHours>4</mateMtbHours>
      <nuzzleMtbHours>30</nuzzleMtbHours>
      <gestationPeriodDays>8</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(2.5, 0)</li>
          <li>(3, 1)</li>
          <li>(4, 1)</li>
          <li>(4.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>6</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.1</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.28</minAge>
          <soundWounded>Pawn_Alphabeaver_Wounded</soundWounded>
          <soundDeath>Pawn_Alphabeaver_Death</soundDeath>
          <soundCall>Pawn_Alphabeaver_Call</soundCall>
          <soundAngry>Pawn_Alphabeaver_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>StandardAnimal</li>
    </tradeTags>
  </ThingDef>

  <PawnKindDef ParentName="AnimalKindBase">
    <defName>ACPGuineaPig</defName>
    <label>guinea pig</label>
    <race>ACPGuineaPig</race>
    <combatPower>20</combatPower>
    <ecoSystemWeight>0.23</ecoSystemWeight>
    <wildGroupSize>
      <min>3</min>
      <max>5</max>
    </wildGroupSize>
    <labelMale>guinea pig boar</labelMale>
    <labelFemale>guinea pig sow</labelFemale>
    <lifeStages>
      <li>
        <label>guinea pig pup</label>
        <bodyGraphicData>
        <texPath>Things/Pawn/Animal/Rodents/Guinea Pig/GuineaPig1</texPath>
        <drawSize>0.4</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Capybara/Dessicated_Capybara</texPath>
          <drawSize>0.5</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Rodents/Guinea Pig/GuineaPig1</texPath>
          <drawSize>0.6</drawSize>
          <shadowData>
            <volume>(0.3, 0.35, 0.25)</volume>
            <offset>(0,0,0)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
         <texPath>Things/Pawn/Animal/Capybara/Dessicated_Capybara</texPath>
          <drawSize>0.7</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Rodents/Guinea Pig/GuineaPig1</texPath>
          <drawSize>0.8</drawSize>
          <shadowData>
            <volume>(0.35, 0.4, 0.3)</volume>
            <offset>(0,0,0)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Capybara/Dessicated_Capybara</texPath>
          <drawSize>0.9</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
 
</Defs>

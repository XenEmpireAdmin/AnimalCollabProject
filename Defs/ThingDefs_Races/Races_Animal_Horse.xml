<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <thingClass>AnimalVariations.AnimalMultiSkins</thingClass>
    <defName>ACPHorse</defName>
    <label>horse</label>
    <description>A large, peaceful herbivore widely known for its great speed and strength. Horses and humans have a history stretching back for millenia, so it is no surprise to see one. Unfortunately, all your colonists are absolutely inept at riding, otherwise it could make a fitting steed.</description>
    <statBases>
      <MoveSpeed>8.5</MoveSpeed>
      <ComfyTemperatureMin>-20</ComfyTemperatureMin>
      <MarketValue>500</MarketValue>
    </statBases>
    <tools>
      <li>
        <label>left hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>4</power>
        <cooldownTime>1.85</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>QuadrupedAnimalWithHooves</body>
      <herdAnimal>true</herdAnimal>
      <packAnimal>true</packAnimal>
      <baseBodySize>1.2</baseBodySize>
      <baseHungerRate>0.5</baseHungerRate>
      <baseHealthScale>1.6</baseHealthScale>
      <petness>0.5</petness>
      <foodType>VegetarianRoughAnimal</foodType>
      <leatherDef>Leather_Plain</leatherDef>
      <meatLabel>horsemeat</meatLabel>
      <trainability>Advanced</trainability>
      <wildness>0.5</wildness>
      <manhunterOnDamageChance>0.025</manhunterOnDamageChance>
      <manhunterOnTameFailChance>0.01</manhunterOnTameFailChance>
      <nuzzleMtbHours>120</nuzzleMtbHours>
      <gestationPeriodDays>30</gestationPeriodDays>
      <lifeExpectancy>27</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.5</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>4</minAge>
          <soundWounded>Pawn_Horse_Wounded</soundWounded>
          <soundDeath>Pawn_Horse_Death</soundDeath>
          <soundCall>Pawn_Horse_Call</soundCall>
          <soundAngry>Pawn_Horse_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
      <wildBiomes>
		<BorealForest>0.05</BorealForest>
		<TemperateForest>0.08</TemperateForest>
		<TemperateSwamp>0.02</TemperateSwamp>
		<ColdBog>0.04</ColdBog>
      </wildBiomes>
    </race>
    <tradeTags>
      <li>AnimalCommon</li>
      <li>AnimalFarm</li>
    </tradeTags>
  </ThingDef>
  
  <PawnKindDef ParentName="AnimalKindBase">
    <defName>ACPHorse</defName>
    <label>horse</label>
    <race>ACPHorse</race>
    <combatPower>55</combatPower>
    <ecoSystemWeight>0.7</ecoSystemWeight>
    <wildGroupSize>
      <min>3</min>
      <max>8</max>
    </wildGroupSize>
    <labelMale>Horse stallion</labelMale>
    <labelFemale>Horse mare</labelFemale>
    <lifeStages>
      <li>
	<labelMale>Horse colt</labelMale>
	<labelFemale>Horse filly</labelFemale>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Horses/Horse/Horse</texPath>
          <drawSize>1.4</drawSize>
          <shaderType>CutoutComplex</shaderType>
          <shadowData>
            <volume>(0.4, 0.3, 0.3)</volume>
            <offset>(0,0,-0.3)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Cow</texPath>
          <drawSize>1.4</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
	<labelMale>Horse colt</labelMale>
	<labelFemale>Horse filly</labelFemale>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Horses/Horse/Horse</texPath>
          <drawSize>1.9</drawSize>
          <shaderType>CutoutComplex</shaderType>
          <shadowData>
            <volume>(0.5, 0.4, 0.4)</volume>
            <offset>(0,0,-0.3)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
         <texPath>Things/Pawn/Animal/Cow/Dessicated_Cow</texPath>
          <drawSize>1.85</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Horses/Horse/Horse</texPath>
          <drawSize>2.5</drawSize>
          <shaderType>CutoutComplex</shaderType>
          <shadowData>
            <volume>(0.7, 0.6, 0.6)</volume>
            <offset>(0,0,-0.6)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Cow/Dessicated_Cow</texPath>
          <drawSize>2.4</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>
  
  <!-- ======================== Wooly Horse ==================================-->
  
  
    <ThingDef ParentName="AnimalThingBase">
    <defName>ACPWoolyHorse</defName>
    <label>woolyhorse</label>
    <description>A plump horse covered in a thick fur fit for much colder climates. Oddly enough, woolyhorses have a throwback to their slower ancestors- actual toed feet; though much larger and further splayed, so as to act as a snowshoe. Odder yet, woolyhorses seem to be omnivorous, with a set of large canines to boot.</description>
    <statBases>
      <MoveSpeed>6.5</MoveSpeed>
      <ComfyTemperatureMin>-40</ComfyTemperatureMin>
      <ComfyTemperatureMax>5</ComfyTemperatureMax>
      <MarketValue>650</MarketValue>
    </statBases>
    <tools>
      <li>
        <label>left hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right hoof</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1.85</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>QuadrupedAnimalWithHooves</body>
      <herdAnimal>true</herdAnimal>
      <packAnimal>true</packAnimal>
      <baseBodySize>1.5</baseBodySize>
      <baseHungerRate>0.5</baseHungerRate>
      <baseHealthScale>1.6</baseHealthScale>
      <foodType>VegetarianRoughAnimal, CarnivoreAnimal</foodType>
      <leatherDef>Leather_Plain</leatherDef>
      <trainability>Advanced</trainability>
      <useMeatFrom>ACPHorse</useMeatFrom>
      <wildness>0.85</wildness>
      <manhunterOnDamageChance>1</manhunterOnDamageChance>
      <manhunterOnTameFailChance>0.075</manhunterOnTameFailChance>
      <nuzzleMtbHours>120</nuzzleMtbHours>
      <gestationPeriodDays>25</gestationPeriodDays>
      <lifeExpectancy>27</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.5</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>4</minAge>
          <soundWounded>Pawn_Horse_Wounded</soundWounded>
          <soundDeath>Pawn_Horse_Death</soundDeath>
          <soundCall>Pawn_Horse_Call</soundCall>
          <soundAngry>Pawn_Horse_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
      <wildBiomes>
		<BorealForest>0.05</BorealForest>
		<Tundra>0.08</Tundra>
		<ColdBog>0.04</ColdBog>
      </wildBiomes>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
      <li>AnimalFighter</li>
    </tradeTags>
  </ThingDef>
  

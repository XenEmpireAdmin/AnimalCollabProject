<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="BaseInsect">
    <defName>ACPSilkspider</defName>
    <label>silkspider</label>
    <description>An insectoid engineered to appear like a spider and produce protein fibres. They are very fragile, but if you take care of the silkspiders, you will get beautiful and tough quasi-silk.</description>
    <statBases>
      <MoveSpeed>1.4</MoveSpeed>
      <ComfyTemperatureMin>5</ComfyTemperatureMin>
      <MarketValue>1500</MarketValue>
      <LeatherAmount>0</LeatherAmount>
      <ArmorRating_Blunt>0.01</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.015</ArmorRating_Sharp>
    </statBases>
    <comps>
      <li Class="CompProperties_Spawner">
        <thingToSpawn>ACPSpidersilk</thingToSpawn>
        <spawnCount>5</spawnCount>
        <spawnIntervalRange>
          <min>75000</min>
          <max>150000</max>
        </spawnIntervalRange>
        <spawnMaxAdjacent>100</spawnMaxAdjacent>
        <spawnForbidden>true</spawnForbidden>
      </li>
    </comps>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTime>4</defaultCooldownTime>
        <meleeDamageBaseAmount>1</meleeDamageBaseAmount>
        <meleeDamageDef>Bite</meleeDamageDef>
        <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
      </li>
	  <li>
		<verbClass>Verb_MeleeAttack</verbClass>
		<defaultCooldownTime>1.65</defaultCooldownTime>
		<meleeDamageBaseAmount>1</meleeDamageBaseAmount>
		<meleeDamageDef>Blunt</meleeDamageDef>
		<commonality>0.01</commonality>
		<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
	  </li>
    </verbs>
    <race>
      <body>BeetleLike</body>
      <baseHungerRate>0.15</baseHungerRate>
      <baseBodySize>0.15</baseBodySize>
      <baseHealthScale>0.05</baseHealthScale>
      <gestationPeriodDays>15</gestationPeriodDays>
      <useMeatFrom>Megaspider</useMeatFrom>
      <trainableIntelligence>None</trainableIntelligence>
      <wildness>0.1</wildness>
	  <wildBiomes>
		<AridShrubland>0.02</AridShrubland>
      </wildBiomes>
      <lifeExpectancy>3</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>EusocialInsectLarva</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>EusocialInsectJuvenile</def>
          <minAge>0.03</minAge>
        </li>
        <li>
          <def>EusocialInsectAdult</def>
          <minAge>0.2</minAge>
          <soundWounded>Pawn_Megascarab_Wounded</soundWounded>
          <soundDeath>Pawn_Megascarab_Death</soundDeath>
          <soundCall>Pawn_Megascarab_Call</soundCall>
          <soundAngry>Pawn_Megascarab_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
  </ThingDef>


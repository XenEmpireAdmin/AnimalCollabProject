<Defs>

  <ThingDef ParentName="AnimalThingBase">
    <defName>ACPOtter</defName>
    <label>otter</label>
    <description>An adorable little critter from the Mustelidae family, frequently found near bodies of water.</description>
    <statBases>
      <MoveSpeed>3.75</MoveSpeed>
      <ComfyTemperatureMin>-35</ComfyTemperatureMin>
      <MarketValue>275</MarketValue>
    </statBases>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>7</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>7</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>11</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>2</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <commonality>0.2</commonality>
      </li>
    </tools>
    <race>
      <body>QuadrupedAnimalWithPawsAndTail</body>
      <herdAnimal>true</herdAnimal>
      <predator>true</predator>
      <baseBodySize>0.4</baseBodySize>
      <maxPreyBodySize>0.35</maxPreyBodySize>
      <baseHungerRate>0.1</baseHungerRate>
      <baseHealthScale>0.7</baseHealthScale>
      <foodType>CarnivoreAnimalStrict, Kibble, AnimalProduct</foodType>
	  <useLeatherFrom>ACPBison</useLeatherFrom>
	  <useMeatFrom>Alphabeaver</useMeatFrom>
      <trainableIntelligence>Advanced</trainableIntelligence>
      <wildness>0.65</wildness>
      <petness>0.5</petness>
      <nuzzleMtbHours>32</nuzzleMtbHours>
      <wildBiomes>
        <TropicalRainforest>0.1</TropicalRainforest>
        <TemperateForest>0.20</TemperateForest>
        <BorealForest>0.15</BorealForest>
        <IceSheet>0.01</IceSheet>
        <Tundra>0.15</Tundra>
		<TropicalSwamp>0.15</TropicalSwamp>
		<TemperateSwamp>0.35</TemperateSwamp>
		<ColdBog>0.25</ColdBog>
      </wildBiomes>
      <gestationPeriodDays>17</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(4, 1)</li>
          <li>(4.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>16</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.17</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.4</minAge>
          <soundWounded>Pawn_Alphabeaver_Wounded</soundWounded>
          <soundDeath>Pawn_Alphabeaver_Death</soundDeath>
          <soundCall>Pawn_Alphabeaver_Call</soundCall>
          <soundAngry>Pawn_Alphabeaver_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>StandardAnimal</li>
    </tradeTags>
  </ThingDef>


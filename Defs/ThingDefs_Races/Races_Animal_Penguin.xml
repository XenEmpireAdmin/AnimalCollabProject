<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BigBirdThingBase">
    <defName>ACPPenguin</defName>
    <label>penguin</label>
    <description>A flighless, carnivorous bird usually found in colder climates.</description>
    <statBases>
      <MoveSpeed>3.2</MoveSpeed>
      <ComfyTemperatureMin>-65</ComfyTemperatureMin>
      <MarketValue>260</MarketValue>
    </statBases>
    <race>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>0.35</baseBodySize>
      <baseHungerRate>0.1</baseHungerRate>
      <baseHealthScale>0.9</baseHealthScale>
      <foodType>CarnivoreAnimal</foodType>
      <wildness>0.80</wildness>
      <lifeExpectancy>17</lifeExpectancy>
      <useLeatherFrom>ACPBlackRhinoceros</useLeatherFrom>
      <useMeatFrom>Cassowary</useMeatFrom>
      <wildBiomes>
        <SeaIce>0.55</SeaIce>
        <IceSheet>0.35</IceSheet>
        <Tundra>0.2</Tundra>
        <BorealForest>0.02</BorealForest>
        <ColdBog>0.1</ColdBog>
      </wildBiomes>
      <manhunterOnTameFailChance>0.0015</manhunterOnTameFailChance>
    </race>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggFertilizedDef>ACPEggPenguinFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>12</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTime>1.55</defaultCooldownTime>
        <meleeDamageBaseAmount>3</meleeDamageBaseAmount>
        <meleeDamageDef>Scratch</meleeDamageDef>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTime>1.55</defaultCooldownTime>
        <meleeDamageBaseAmount>5</meleeDamageBaseAmount>
        <meleeDamageDef>Bite</meleeDamageDef>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>20</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
	  <li>
		<verbClass>Verb_MeleeAttack</verbClass>
		<defaultCooldownTime>1.65</defaultCooldownTime>
		<meleeDamageBaseAmount>1</meleeDamageBaseAmount>
		<meleeDamageDef>Blunt</meleeDamageDef>
		<commonality>0.01</commonality>
		<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
	  </li>
    </verbs>
  </ThingDef>


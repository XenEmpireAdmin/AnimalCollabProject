<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
  <ThingDef ParentName="AnimalThingBase">
    <thingClass>AnimalVariations.AnimalMultiSkins</thingClass>
    <defName>ACPPtarmigan</defName>
    <label>ptarmigan</label>
    <description>A small gamebird notable for its feathered feet, to better survive in frigid temperatures.</description>
    <statBases>
      <MoveSpeed>2.0</MoveSpeed>
      <ComfyTemperatureMin>-30</ComfyTemperatureMin>
      <ComfyTemperatureMax>30</ComfyTemperatureMax>
      <MarketValue>75</MarketValue>
      <LeatherAmount>0</LeatherAmount>
    </statBases>
   <tools>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>4</power>
        <cooldownTime>1.85</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>1.65</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <commonality>0.2</commonality>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>ACPEggPtarmiganUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>ACPEggPtarmiganFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>5</eggLayIntervalDays>
        <eggCountRange>
	  <min>1</min>
          <max>5</max>
	</eggCountRange>
      </li>
    </comps>
    <race>
      <body>Bird</body>
      <baseHungerRate>0.25</baseHungerRate>
      <baseBodySize>0.25</baseBodySize>
      <baseHealthScale>0.35</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
	  <useMeatFrom>Cassowary</useMeatFrom>
      <trainableIntelligence>None</trainableIntelligence>
      <wildness>0.05</wildness>
      <gestationPeriodDays>7</gestationPeriodDays>
      <mateMtbHours>3</mateMtbHours>
      <litterSizeCurve>
        <points>
          <li>(0.99, 0)</li>
          <li>(1, 1)</li>
          <li>(1.01, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>6</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
	  <soundWounded>Pawn_Chick_Call</soundWounded>
	  <soundDeath>Pawn_Chick_Call</soundDeath>
	  <soundCall>Pawn_Chick_Call</soundCall>
	  <soundAngry>Pawn_Chick_Call</soundAngry>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.10</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.30</minAge>
          <soundWounded>Pawn_Chicken_Wounded</soundWounded>
          <soundDeath>Pawn_Chicken_Death</soundDeath>
          <soundCall>Pawn_Chicken_Call</soundCall>
          <soundAngry>Pawn_Chicken_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
      <wildBiomes>
		<Tundra>0.05</Tundra>
		<BorealForest>0.6</BorealForest>
		<ColdBog>0.2</ColdBog>
      </wildBiomes>
    </race>
    <tradeTags>
      <li>StandardAnimal</li>
    </tradeTags>
  </ThingDef>


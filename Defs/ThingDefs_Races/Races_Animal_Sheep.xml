<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="AnimalThingBase">
   <thingClass>AnimalVariations.AnimalMultiSkins</thingClass>
    <defName>ACPSheep</defName>
    <label>sheep</label>
	<description>A mid-sized farm animal, widely farmed for its warm wool and friendly nature.</description>
    <statBases>
      <MoveSpeed>3</MoveSpeed>
      <ComfyTemperatureMin>-18</ComfyTemperatureMin>
      <MarketValue>250</MarketValue>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTime>1.65</defaultCooldownTime>
        <meleeDamageBaseAmount>5</meleeDamageBaseAmount>
        <meleeDamageDef>Blunt</meleeDamageDef>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
      </li>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTime>1.65</defaultCooldownTime>
        <meleeDamageBaseAmount>5</meleeDamageBaseAmount>
        <meleeDamageDef>Blunt</meleeDamageDef>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
      </li>
	  <li>
		<verbClass>Verb_MeleeAttack</verbClass>
		<defaultCooldownTime>1.65</defaultCooldownTime>
		<meleeDamageBaseAmount>4</meleeDamageBaseAmount>
		<meleeDamageDef>Blunt</meleeDamageDef>
		<commonality>0.01</commonality>
		<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
	  </li>
    </verbs>
    <comps>
      <li Class="CompProperties_Shearable">
        <woolDef>ACPSheepWool</woolDef>
        <shearIntervalDays>5</shearIntervalDays>
        <woolAmount>30</woolAmount>
      </li>
    </comps>
    <race>
      <body>QuadrupedAnimalWithHooves</body>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>0.8</baseBodySize>
      <baseHungerRate>0.3</baseHungerRate>
      <baseHealthScale>0.7</baseHealthScale>
      <foodType>VegetarianRoughAnimal</foodType>
	  <useLeatherFrom>ACPBlackRhinoceros</useLeatherFrom>
	  <meatLabel>mutton</meatLabel>
      <wildness>0</wildness>
      <nuzzleMtbHours>100</nuzzleMtbHours>
      <gestationPeriodDays>25</gestationPeriodDays>
      <lifeExpectancy>10</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.15</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.6</minAge>
          <soundWounded>Pawn_Elk_Wounded</soundWounded>
          <soundDeath>Pawn_Elk_Death</soundDeath>
          <soundCall>Pawn_Elk_Call</soundCall>
          <soundAngry>Pawn_Elk_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
      <wildBiomes>
    	<Tundra>0.06</Tundra>
    	<BorealForest>0.095</BorealForest>
    	<TemperateForest>0.17</TemperateForest>
      <AridShrubland>0.016</AridShrubland>
	    <Desert>0.01</Desert>
      <TropicalSwamp>0.15</TropicalSwamp>
        <ColdBog>0.1</ColdBog>
        <TemperateSwamp>0.15</TemperateSwamp>
      </wildBiomes>
    </race>
    <tradeTags>
      <li>StandardAnimal</li>
    </tradeTags>
  </ThingDef>

